<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="bc3_version_action" model="ir.actions.act_window">
        <field name="name">BC3 Version</field>
        <field name="res_model">bc3.version</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="bc3_version_view_form" model="ir.ui.view">
        <field name="name">bc3.version.form</field>
        <field name="model">bc3.version</field>
        <field name="arch" type="xml">
            <form string="BC3 Version">
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bc3_version_view_tree" model="ir.ui.view">
        <field name="name">bc.version.tree</field>
        <field name="model">bc3.version</field>
        <field name="arch" type="xml">
            <list string="BC3 Version">
                <field name="name" />
            </list>
        </field>
    </record>

    <menuitem
        id="menu_bc3_version"
        name="BC3 Version"
        parent="sale.menu_sale_config"
        action="bc3_version_action"
        sequence="100"
    />
</odoo>