<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="bc3_import_wizard_form" model="ir.ui.view">
        <field name="name">bc3.import.wizard.wizard.form</field>
        <field name="model">bc3.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import BC3 File">
                <group>
                    <field name="bc3_file" filename="bc3_filename"/>
                    <field name="bc3_filename" invisible="1"/>
                </group>
                <footer>
                    <button
                        name="action_import"
                        string="Import File"
                        type="object"
                        class="btn-primary"
                        data-hotkey="q"
                    />
                    <button
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                        data-hotkey="z"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_bc3_file" model="ir.actions.act_window">
        <field name="name">Import BC3 File</field>
        <field name="res_model">bc3.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>